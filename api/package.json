{
  "name": "task-management-api",
  "description": "Backend API for Task-Management-API powered by NodeJS and MySQL.",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start:dev": "env-cmd -f .env nodemon index.js",
    "start:main": "env-cmd -f .env node index.js",
    "test": "env-cmd -f .env mocha --exit",
    "test:cover": "env-cmd -f .env nyc --reporter=html mocha --exit",
    "make:aws-layer": "npm install && mkdir -p nodejs && cp -r node_modules nodejs/ && zip -r aws-layer.zip nodejs",
    "pm2:start": "pm2 start \"npm run start:main\" --name=\"Task-Management-API\"",
    "pm2:restart": "pm2 restart Task-Management-API --update-env"
  },
  "keywords": [],
  "author": "ramsharan.wiftcap@gmail.com",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "env-cmd": "^10.1.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-joi-validation": "^5.0.1",
    "fast-csv": "^4.3.6",
    "joi": "^17.9.2",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "mysql2": "^3.10.0",
    "nodemailer": "^6.9.3",
    "nodemon": "^3.0.1",
    "pg": "^8.10.0",
    "pg-format": "^1.0.4",
    "serverless-http": "^3.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "supertest": "^6.3.3"
  },
  "kraftedBy": "ram"
}
